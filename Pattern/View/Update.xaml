<Window x:Class="Pattern.View.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pattern.View"
        mc:Ignorable="d"
        Title="Update" Height="300" Width="500">
    
    <Grid>
        <StackPanel>
            <TextBlock Text="Вид:" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,20"/>
            <TextBox x:Name="textUpdate" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,20" Height="50" Width="200"/>
            <Button x:Name="buttonSave" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Click="buttonSave_Click">Изменить</Button>
        </StackPanel>
    </Grid>
    
</Window>
